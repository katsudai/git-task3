<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100, 100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <div class="btn btn-outline-secondary btn-block">
          <%= link_to edit_user_path(current_user.id) do %>
            <i class="fa-solid fa-user-gear " style="color: gray;"></i>
          <% end %>
        </div>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url: books_path, method: :post do |f| %>
        <div>
          
        </div>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% @books.each do |book| %>
        <p><%= link_to book.title, book_path(book.id) %></p>
        <p><%= book.body %></p>
      <% end %>
    </div>
  </div>
</div>

